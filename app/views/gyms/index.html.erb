<h1 class="current-category"><%= params[:category]%></h1>

<% if @gyms.count == 0 %>
 <h3>There are no gyms in this category</h3>
<% else %>
 <div class="row">
	<% @gyms.each do |gym| %>
		<div class="col-md-4">
		 <a href="/gyms/ <%= gym.id %>" >
		   <%= image_tag gym.gym_img.url(:gym_index), class: "gym" %>
		 </a>
		</div>  
	<% end %>
  </div>
<% end %>


